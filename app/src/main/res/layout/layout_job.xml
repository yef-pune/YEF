<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout_job"
    android:layout_margin="6dp">

    <TextView
        android:id="@+id/textView_jobTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Android Application Developer" />

    <TextView
        android:id="@+id/textView_companyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_jobTitle"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:text="ABC company" />

    <TextView
        android:id="@+id/textView_jobLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_companyName"
        android:drawableLeft="@drawable/ic_location"
        android:drawableTint="@android:color/darker_gray"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Pune" />

    <TextView
        android:id="@+id/textView_jobExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textView_companyName"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:drawableLeft="@drawable/ic_job"
        android:drawableTint="@android:color/darker_gray"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="2-3 Years" />

    <TextView
        android:id="@+id/textView_jobKeySkills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_jobLocation"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="12sp"
        tools:text="Key skills: Operational process management" />


</RelativeLayout>