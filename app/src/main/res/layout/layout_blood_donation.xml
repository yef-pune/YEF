<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout_bloodDonation"
    android:layout_margin="6dp">

    <TextView
        android:id="@+id/textView_campCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Pune"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView_campLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_campCity"
        android:drawableLeft="@drawable/ic_location"
        android:drawableTint="@android:color/darker_gray"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Shivajinagar" />

    <TextView
        android:id="@+id/textView_campDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_campCity"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_calender"
        android:drawableTint="@android:color/darker_gray"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="12th-June" />

    <TextView
        android:id="@+id/textView_campTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textView_campCity"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:drawableLeft="@drawable/ic_time"
        android:drawableTint="@android:color/darker_gray"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="09AM-04PM"/>

    <TextView
        android:id="@+id/textView_campContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_campLocation"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="12sp"
        tools:text="Contact:7756915448" />

</RelativeLayout>